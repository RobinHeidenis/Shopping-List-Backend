{
  "extends": "@tsconfig/node14",
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "*.ts",
    "*.js",
    ".eslintrc.js"
  ]
}
